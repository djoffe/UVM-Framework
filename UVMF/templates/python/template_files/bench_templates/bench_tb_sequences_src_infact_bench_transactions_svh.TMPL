{% set fname = "project_benches/{{name}}/tb/sequences/src/infact_{{name}}_bench_transactions.svh" %}
{% extends "base_template.TMPL" %}
{% set conditional = "infact_enabled" %}

{% block description %}
//----------------------------------------------------------------------
//
// DESCRIPTION: This package includes definitions for all transactions
//   that could be generated by inFact. This approach allows for
//   avoiding parameterized classes
//
//----------------------------------------------------------------------
{% endblock %}

{% block contents %}

{% for bfm in bfms %}
{% if bfm.activity == 'ACTIVE' %}
class {{bfm.name}}_{{bfm.ifPkg}}_transaction extends {{bfm.ifPkg}}_transaction{{macro.paramUseNested(bfm.parameters)|indent(8)}};
  `uvm_object_utils({{bfm.name}}_{{bfm.ifPkg}}_transaction)
endclass
{% endif %}
{% endfor %}
{% endblock %}
