{% set fname = "project_benches/{{name}}/tb/sequences/src/infact_{{name}}_bench_transactions.svh" %}
{% extends "base_template.TMPL" %}
{% set conditional = "infact_ready" %}

{% block description %}
//
//----------------------------------------------------------------------
// Project         : {{name}} Simulation Bench 
// Unit            : inFact Transaction Classes
// File            : infact_{{name}}_bench_transactions.svh
//----------------------------------------------------------------------
//
// DESCRIPTION: This package includes definitions for all transactions
//   that could be generated by inFact. This approach allows for
//   avoiding parameterized classes
//
//----------------------------------------------------------------------
//
{% endblock %}

{% block contents %}

{% for bfm in bfms %}
{% if bfm.activity == 'ACTIVE' %}
class {{bfm.name}}_{{bfm.ifPkg}}_transaction extends {{bfm.ifPkg}}_transaction {% if bfm.parameters|length > 0%}#({% endif %}{% for param in bfm.parameters %}.{{param.name}}({{param.value}}){% if not loop.last %},{% endif %}{% endfor %}{% if bfm.parameters|length > 0%}) {% endif %};
  `uvm_object_utils({{bfm.name}}_{{bfm.ifPkg}}_transaction)
endclass
{% endif %}
{% endfor %}
{% endblock %}
